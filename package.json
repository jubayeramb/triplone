{
  "name": "triplone",
  "version": "1.0.0",
  "description": "Your all-in-one solution for managing and sharing trip plans with friends and family.",
  "author": "Jubayer Al Mamun",
  "keywords": [],
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}\"",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "dev:web": "turbo run dev --filter=web",
    "dev:dash": "turbo run dev --filter=dashboard"
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.8",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.18.0"
  }
}
