# Enable workspace packages to be linked
link-workspace-packages=true

# Use single lockfile for entire workspace
shared-workspace-lockfile=true

# Control how workspace dependencies are saved
# Use "workspace:*" for workspace packages
save-workspace-protocol=rolling

# Use strict peer dependencies (recommended for monorepos)
strict-peer-dependencies=false

# Auto-install peers
auto-install-peers=true

# Prevent cyclic dependencies
disallow-workspace-cycles=true

# Use node-linker to control how packages are installed
# "isolated" is recommended for monorepos to prevent phantom dependencies
node-linker=isolated

# Enable workspace root in recursive commands
include-workspace-root=true
